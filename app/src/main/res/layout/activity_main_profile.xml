<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainProfile"
    android:background="@color/light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_red">

        <ImageButton
            android:id="@+id/from_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/header_button_1"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:text="Профиль"
        android:textSize="36dp"
        />

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/ic_baseline_person_25"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/firstnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:text=" Фамилия"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:width="240dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
        />

    <EditText
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstnametext"
        android:text=" Имя"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:width="240dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
        />

    <EditText
        android:id="@+id/lastnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametext"
        android:text=" Отчество"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:width="240dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
        />

    <EditText
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastnametext"
        android:text=" Email"
        android:textSize="24dp"
        android:layout_marginLeft="20dp"
        android:width="240dp"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SaveChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailtext"
        android:layout_marginTop="40dp"
        android:background="@drawable/default_button_1"
        android:textSize="15dp"
        android:text="Сохранить"
        android:textColor="@color/red"
        android:width="170dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/to_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SaveChange"
        android:layout_marginTop="40dp"
        android:background="@drawable/default_button"
        android:textSize="17dp"
        android:text="Корзина"
        android:textColor="@color/red"
        android:width="200dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>